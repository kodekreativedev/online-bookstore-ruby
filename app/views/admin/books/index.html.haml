.admin-books-panel
  - header "Book List"

  = link_to 'New book', new_admin_book_path, class: 'btn btn-primary'

  %table.table.table-hover
    %tr
      %th Title
      %th ISBN
      %th Author(s)
      %th Publisher
      %th Year
      %th Inventory
      %th{colspan: "2"} Actions

    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.isbn
        %td= book.authors
        %td= book.publisher
        %td= book.year
        %td= book.inventory
        %td= link_to 'Show', admin_book_path(book), class: 'btn btn-info'
        %td= link_to 'Edit', edit_admin_book_path(book), class: 'btn btn-warning'