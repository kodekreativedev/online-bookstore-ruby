.row
  #mycart
    %h1 My Cart
    %p
      You've selected
      %span.cart-count
        = " #{current_user.cart_count} book(s)!"
    - @cart_books.each do |book, quantity|
      .row.cart-book{"data-equalizer": ""}
        .medium-3.columns{"data-equalizer-watch": ""}
          = link_to book do
            = image_tag 'http://placehold.it/250x350', class: "thumbnail"
        .medium-5.columns{"data-equalizer-watch": ""}
          %h4= book.title
        .medium-3.column{"data-equalizer-watch": ""}
          %h4= number_to_currency(book.price)
          %h5= "QUANTITY: #{quantity}"
        .medium-1.column{"data-equalizer-watch": ""}
          = link_to remove_from_cart_path(book_id: book.id), method: :put do
            %i.fi-x.right
    = link_to "Checkout", orders_path, method: :post, class: "button large expanded" unless current_user.get_cart_books.blank?
