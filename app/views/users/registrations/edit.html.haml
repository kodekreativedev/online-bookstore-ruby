.row
  %h1= "Edit #{resource_name.to_s.humanize}"
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!

    = f.label :full_name
    = f.text_field :full_name

    = f.label :username
    = f.text_field :username
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %span.label.label-info
        - "Currently waiting confirmation for: #{resource.unconfirmed_email}"

    = f.label :password
    = f.password_field :password, autocomplete: "off"
    %span.help-block leave blank if you don't want to change it
    - if @minimum_password_length
      %span.help-block
        - "#{@minimum_password_length} characters minimum"

    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "off"

    = f.label :current_password
    = f.password_field :current_password, autocomplete: "off"
    %span.help-block we need your current password to confirm your changes

    = f.submit "Update", class: 'expanded button'

  %h3 Cancel my account
  %p
    Unhappy?
    = button_to "Cancel my account", registration_path(resource_name), class: 'alert button', data: { confirm: "Are you sure?" }, method: :delete
    
  = link_to "Back", :back, class: 'secondary button'